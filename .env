# ======= Global Settings =======
NODE_ENV=production
TZ=Europe/Berlin
GENERIC_TIMEZONE=Europe/Berlin

# ======= Traefik Domains =======
N8N_HOST=n8n.biocentra.eu
TWENTY_HOST=twenty.biocentra.eu
CALCOM_HOST=calendar.biocentra.eu
SERVICE_FQDN_PLANE=plane.biocentra.eu

# ======= PostgreSQL Master (shared) =======
POSTGRES_SUPERUSER=admin
POSTGRES_PORT=5432

# ======= n8n Database =======
N8N_DB=n8n
N8N_DB_USER=n8n_user

# ======= TwentyCRM Database =======
TWENTY_DB=twenty
TWENTY_DB_USER=twenty_user
TWENTY_REDIS_URL=redis://twenty-redis:6379

# ======= Cal.com Database =======
CALCOM_DB=calcom
CALCOM_DB_USER=calcom_user

# ======= Cal.com URLs =======
NEXT_PUBLIC_WEBAPP_URL=https://${CALCOM_HOST}
NEXT_PUBLIC_API_V2_URL=https://${CALCOM_HOST}/api/v2
NEXT_PUBLIC_LICENSE_CONSENT=true
CALCOM_TELEMETRY_DISABLED=true

# ======= Plane App Configuration =======
APP_RELEASE=v0.25.2
CORS_ALLOWED_ORIGIN=https://${SERVICE_FQDN_PLANE}
GUNICORN_WORKERS=1
REDIS_URL=redis://plane-redis:6379/
RABBITMQ_VHOST=plane
API_BASE_URL=http://api:8000
FILE_SIZE_LIMIT=5242880

# ======= Plane Service Credentials (Usernames only) =======
SERVICE_USER_POSTGRES=plane
SERVICE_USER_RABBITMQ=plane
SERVICE_USER_MINIO=plane_minio

# ======= Plane Object Storage (MinIO / S3) =======
AWS_REGION=eu-central-1
AWS_S3_ENDPOINT_URL=http://plane-minio:9000
AWS_S3_BUCKET_NAME=uploads
BUCKET_NAME=uploads

# ======= Common Docker ports =======
INTERNAL_PORT=3000
